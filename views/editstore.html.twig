<!DOCTYPE html>
<html>
  <head>
    {% include '/includes/head.html.twig' %}
  </head>
  <body>
    <div class="container">
      <h1>Blake's Shoe Store Application:</h1>
      <h2>Edit {{store.getName}} here</h2>
        <div class="row">
            <div class="col-md-6">


                <form class="form-group" action="/update_store/{{store.getId}}" method="post">
                    <input value="patch" type='hidden' name='_method'>
                    <h2>Edit a store</h2>
                    <label for='name'>Change Store Name:</label>
                    <input class="form-control"id='name' name='name' type='text'><br>

                    <!-- <label for='copies_total'>Change number of copies:</label>
                    <input  class="form-control"id='copies_total' name='copies_total' type='text'><br> -->

                    <button class="btn btn-lg btn-primary" type='submit'>Update Store</button>
                </form>


                <form class="form-group" action="/delete_this_store/{{store.getId}}" method="post">
                    <input value="delete" type='hidden' name='_method'>
                    <button class="btn btn-lg btn-warning"type='submit'>Delete this store</button>
                </form>
            </div>


            <div class="col-md-6">
                <form class="form-group" action="/add_brand_to_store" method="post">
                    <input id="store_id" name="store_id" type="hidden" value="{{ store.getId }}">
                    <select id='brand_id' name='brand_id' type='text'>
                        {%for brand in brands%}
                            <option value="{{ brand.getId }}">{{brand.getName}}</option>
                        {%endfor%}
                    </select>
                    <button class="btn btn-lg btn-primary"type='submit'>Add Brand</button>

                </form>
            </div>
        </div><!--row-->
        <hr>



        <div id='navigation'>
            <p>
                <h1><a href="/">Home</a></h1>
            </p>
        </div>
    </div><!--container-->
  </body>
</html>

